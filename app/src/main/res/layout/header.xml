<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/darkgray">

    <ImageButton
        android:id="@+id/home"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="5dp"
        android:adjustViewBounds="true"
        android:maxWidth="110dp"
        android:maxHeight="110dp"
        android:scaleType="fitCenter"
        tools:srcCompat="@drawable/home" />


    <ImageView
        android:id="@+id/profile"
        android:layout_width="279dp"
        android:layout_height="96dp"
        android:layout_marginLeft="0dp"
        android:adjustViewBounds="true"
        android:maxWidth="40dp"
        android:maxHeight="40dp"
        android:scaleType="fitCenter"
        tools:srcCompat="@drawable/profile" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <ImageButton
        android:id="@+id/profileButton"
        android:layout_width="279dp"
        android:layout_height="55dp"
        android:layout_marginLeft="0dp"
        android:adjustViewBounds="true"
        android:maxWidth="40dp"
        android:maxHeight="40dp"
        android:scaleType="fitCenter"
        android:src="@drawable/profileButton" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <ImageButton
        android:id="@+id/foodButton"
        android:layout_width="279dp"
        android:layout_height="75dp"
        android:layout_marginLeft="0dp"
        android:adjustViewBounds="true"
        android:maxWidth="40dp"
        android:maxHeight="40dp"
        android:scaleType="fitCenter"
        android:src="@drawable/food_module" />

    <ImageButton
        android:id="@+id/stayButton"
        android:layout_width="279dp"
        android:layout_height="75dp"
        android:layout_marginLeft="0dp"
        android:maxWidth="40dp"
        android:maxHeight="40dp"
        android:scaleType="fitCenter"
        android:src="@drawable/stay_module" />

    <ImageButton
        android:id="@+id/eventsButton"
        android:layout_width="279dp"
        android:layout_height="75dp"
        android:layout_marginLeft="0dp"
        android:maxWidth="40dp"
        android:maxHeight="40dp"
        android:scaleType="fitCenter"
        android:src="@drawable/events_module" />

    <ImageButton
        android:id="@+id/facilitiesButton"
        android:layout_width="279dp"
        android:layout_height="75dp"
        android:layout_marginLeft="0dp"
        android:maxWidth="40dp"
        android:maxHeight="40dp"
        android:scaleType="fitCenter"
        android:src="@drawable/facilities_module" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <ImageButton
        android:id="@+id/creditsButton"
        android:layout_width="279dp"
        android:layout_height="55dp"
        android:layout_marginLeft="0dp"
        android:adjustViewBounds="true"
        android:maxWidth="40dp"
        android:maxHeight="40dp"
        android:scaleType="fitCenter"
        android:src="@drawable/creditsButton" />



    <Space
        android:layout_width="match_parent"
        android:layout_height="12dp" />

</LinearLayout>
